<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:layout_margin="10dp"
    android:gravity="center">

    <view.CostumFont
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:textSize="@dimen/level"/>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_below="@+id/level"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <view.CostumFont
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="01"
                android:textSize="@dimen/level01"/>

            <view.CostumFont
                android:id="@+id/TebakKata"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/backgorund_selector"
                android:gravity="center"
                android:text="Tebak\nKata"
                android:textSize="30sp"/>


        </LinearLayout>

        <view.CostumFont
            android:id="@+id/TebakGambar"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/backgorund_selector"
            android:gravity="center"
            android:text="Tebak\nGambar"
            android:textSize="30sp"/>



    </LinearLayout>


</RelativeLayout>