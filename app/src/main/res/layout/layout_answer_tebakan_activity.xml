<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/GambarTebakan_Answer"
                android:layout_width="fill_parent"
                android:layout_height="400px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_top_life_point"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/life1"
                    android:layout_width="@dimen/width_life_point"
                    android:layout_height="@dimen/width_life_point"
                    android:src="@drawable/heart_life_point3" />

                <ImageView
                    android:id="@+id/life2"
                    android:layout_width="@dimen/width_life_point"
                    android:layout_height="@dimen/width_life_point"
                    android:src="@drawable/heart_life_point3" />

                <ImageView
                    android:id="@+id/life3"
                    android:layout_width="@dimen/width_life_point"
                    android:layout_height="@dimen/width_life_point"
                    android:src="@drawable/heart_life_point3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginTop"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hints1"
                    android:layout_width="47px"
                    android:layout_height="47px"
                    android:layout_marginRight="@dimen/marginTop"
                    android:onClick="HintBrow"
                    android:src="@drawable/hints" />

                <ImageView
                    android:id="@+id/share1"
                    android:layout_width="47px"
                    android:layout_height="47px"
                    android:layout_marginRight="@dimen/marginTop"
                    android:src="@drawable/facebook2" />

                <ImageView
                    android:id="@+id/share2"
                    android:layout_width="47px"
                    android:layout_height="47px"
                    android:src="@drawable/twitter2" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/TextTebakan_Answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:text="text tebakan" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/TextAnswer_Answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextTebakan_Answer"
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:hint="@string/hints_answer"
                android:inputType="text" />
        </LinearLayout>


    </ScrollView>




</LinearLayout>

