<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/abc_action_bar_content_inset_material"
              android:background="@drawable/dialog_selector"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/anjing_senang"/>

    <antiboring.game.view.font.RobotoFont
        android:id="@+id/coin_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/dialog_correct_answer"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>



</LinearLayout>