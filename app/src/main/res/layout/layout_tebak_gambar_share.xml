<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/shareLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/TebakGambar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/gambar_easy1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/TebakGambar"
        android:layout_alignTop="@id/TebakGambar"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_utama"/>
        <antiboring.game.view.font.CostumFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:text="Anti Boring"
            android:textColor="@color/blue_level_dark"
            android:textSize="25sp"/>


    </LinearLayout>


</RelativeLayout>