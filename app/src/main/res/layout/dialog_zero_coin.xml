<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/abc_action_bar_content_inset_material"
              android:background="@drawable/dialog_selector"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/anjing_sedih"/>

    <antiboring.game.view.font.RobotoFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/dialog_zero_coin"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/buyCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_selector"
        android:gravity="center">
        <antiboring.game.view.font.CostumFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/key_buy_coins"
            android:textColor="@color/white"
            android:textSize="25sp"/>
    </LinearLayout>




</LinearLayout>