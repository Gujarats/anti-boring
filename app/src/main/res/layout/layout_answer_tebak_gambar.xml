<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="antiboring.game.activity.AnswerTebakKataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/TebakGambar"
            android:layout_width="fill_parent"
            android:layout_height="250dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6eccec"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/layoutAnim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/jawabanTebakan"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#348dcc"
                    android:textColor="@color/white"
                    android:textSize="25sp">
                    <requestFocus/>
                </android.support.v7.widget.AppCompatEditText>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#348dcc">

                    <ImageView
                        android:id="@+id/btnCek"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/tambah" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/share" />
                <ImageView
                    android:id="@+id/btnHelp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/help" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/TemaKu.PopupOverlay" >

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/panahback" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gift"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/coins_icon"
                android:src="@drawable/gift2"/>

            <ImageView
                android:id="@+id/coins_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/coins"
                android:src="@drawable/coins"/>

            <antiboring.game.view.font.CostumFont
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/abc_action_bar_content_inset_material"
                android:text="1200"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

</android.support.design.widget.CoordinatorLayout>