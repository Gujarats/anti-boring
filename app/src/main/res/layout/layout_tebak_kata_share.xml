<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/shareLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layoutTebakKata"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="#6eccec"
        android:gravity="center"
        android:padding="20dp">

        <antiboring.game.view.font.CostumFont
            android:id="@+id/TebakKata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Advasjnviwhefkndn"
            android:textColor="#ffffff"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_utama"/>
        <antiboring.game.view.font.CostumFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:text="Anti Boring"
            android:textColor="@color/blue_level_dark"
            android:textSize="25sp"/>


    </LinearLayout>


</RelativeLayout>