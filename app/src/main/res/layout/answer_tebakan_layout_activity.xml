<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/GambarTebakanAnswer"
        android:layout_width="400dp"
        android:layout_height="400dp"/>
    <TextView
        android:id="@+id/TextTebakanAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GambarTebakanAnswer"
        android:text="text tebakan"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextTebakanAnswer"
        android:hint="@string/hints_answer"/>

</RelativeLayout>