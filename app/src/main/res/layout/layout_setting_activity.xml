<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/marginTop">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Email"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="bold"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/email_ku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="gujarat.santana@gmail.com"
            android:textColor="@color/gray"
            android:textSize="16dp"
             />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/gray_1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Password"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="bold"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/passwordku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="**************"
            android:textColor="@color/gray"
            android:textSize="16dp"
             />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/gray_1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Age"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="bold"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ageku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="18"
            android:textColor="@color/gray"
            android:textSize="16dp"
             />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/gray_1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Facebook Account"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="bold"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/facebookku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="www.facacebook.com/gujarats"
            android:textColor="@color/gray"
            android:textSize="16dp"
             />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/gray_1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/send_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Twitter Account"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:textStyle="bold"
             />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Twitterku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="'@'gujarats"
            android:textColor="@color/gray"
            android:textSize="16dp"
             />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_margin="5dp"
        android:background="@color/gray_1" />
</LinearLayout>