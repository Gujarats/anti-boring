<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#0379f7">
                    <TextView
                        android:id="@+id/txtLvlKecil1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="bottom|center_horizontal"
                        android:text="05"
                        android:textColor="#ffffff"
                        android:textSize="45sp" />
                    <LinearLayout
                        android:id="@+id/layoutBintangKecil"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/bintang1LvlKecil"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/bintang" />
                        <ImageView
                            android:id="@+id/bintang2LvlKecil"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/bintang" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relLayout"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#0379f7">
                    <TextView
                        android:id="@+id/txtLvlKecil2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="bottom|center_horizontal"
                        android:text="06"
                        android:textColor="#ffffff"
                        android:textSize="45sp" />
                    <LinearLayout
                        android:id="@+id/layoutBintangKecil1"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:id="@+id/bintang3LvlKecil"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/bintang" />
                        <ImageView
                            android:id="@+id/bintang4LvlKecil"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/bintang" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_below="@+id/linear1"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/relLayout"
                android:background="#882245a4">
                <TextView
                    android:id="@+id/txtLvlSedang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/layoutBintangSedang"
                    android:gravity="bottom|center_horizontal"
                    android:text="07"
                    android:textColor="#ffffff"
                    android:textSize="45sp" />
                <LinearLayout
                    android:id="@+id/layoutBintangSedang"
                    android:layout_width="35dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/bintang1LvlSedang"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/bintang" />
                    <ImageView
                        android:id="@+id/bintang2LvlSedang"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/bintang" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemLvlBesar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#3a43de">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/txtLvlBesar">
                <ImageView
                    android:id="@+id/bintang1LvlBesar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/bintang" />
                <ImageView
                    android:id="@+id/bintang2LvlBesar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/bintang" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtLvlBesar"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="bottom|center_horizontal"
                android:text="08"
                android:textColor="#ffffff"
                android:textSize="95sp" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>