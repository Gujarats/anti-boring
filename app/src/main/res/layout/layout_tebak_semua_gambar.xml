<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_result"
    android:fitsSystemWindows="true" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/TemaKu.PopupOverlay" >


        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@drawable/panahback" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="440dp"

            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <antiboring.game.view.font.RobotoFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Level"
                    android:textColor="@color/blue_smooth"
                    android:textSize="40sp" />
                <antiboring.game.view.font.RobotoFont
                    android:id="@+id/txtLvl"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="01"
                    android:textColor="@color/blue_smooth"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <antiboring.game.view.font.RobotoFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Tebak Semua Gambar"
                    android:textColor="@color/blue_smooth"
                    android:textSize="19sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="380dp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="240dp" >

                    <ImageView
                        android:id="@+id/gambar1"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginBottom="10dp"
                        android:src="#b9b9b9" />

                    <RelativeLayout
                        android:id="@+id/answered1"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_alignBottom="@id/gambar1"
                        android:layout_alignLeft="@id/gambar1"
                        android:layout_alignRight="@id/gambar1"
                        android:layout_alignTop="@id/gambar1"
                        android:gravity="center"

                        android:scaleType="fitXY" >
                        <antiboring.game.view.font.RobotoFont

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Answered"
                            android:textColor="@color/primary"
                            android:textSize="25sp"/>
                    </RelativeLayout>
                </RelativeLayout>



                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp" >

                        <ImageView
                            android:id="@+id/gambar2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="#b9b9b9" />

                        <RelativeLayout
                            android:id="@+id/answered2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/gambar2"
                            android:layout_alignLeft="@id/gambar2"
                            android:layout_alignRight="@id/gambar2"
                            android:layout_alignTop="@id/gambar2"
                            android:gravity="center"

                            android:scaleType="fitXY" >
                            <antiboring.game.view.font.RobotoFont

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Answered"
                                android:textColor="@color/primary"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp" >

                        <ImageView
                            android:id="@+id/gambar3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="#b9b9b9" />

                        <RelativeLayout
                            android:id="@+id/answered3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/gambar3"
                            android:layout_alignLeft="@id/gambar3"
                            android:layout_alignRight="@id/gambar3"
                            android:layout_alignTop="@id/gambar3"
                            android:gravity="center"

                            android:scaleType="fitXY" >
                            <antiboring.game.view.font.RobotoFont

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Answered"
                                android:textColor="@color/primary"
                                android:textSize="20sp"/>
                        </RelativeLayout>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





</android.support.design.widget.CoordinatorLayout>