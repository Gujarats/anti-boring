<resources>

    <!-- Base application theme. -->
    <style name="TemaKu" parent="Base.Theme.DesignDemo">
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_level</item>
        <item name="colorPrimaryDark">@color/blue_level_dark</item>
        <item name="colorAccent">@color/blue_level</item>
        <item name="android:windowBackground">@color/window_background</item>

    </style>


    //styel for item menu text
    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="TemaKu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TemaKu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
